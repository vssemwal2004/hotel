# Server Configuration
PORT=5000

# Database
MONGODB_URI=mongodb://127.0.0.1:27017/hotel
# For MongoDB Atlas, use: mongodb+srv://<username>:<password>@cluster.mongodb.net/hotel?retryWrites=true&w=majority

# Frontend URL (for CORS)
CLIENT_ORIGIN=http://localhost:3000

# JWT Secret (generate a strong random string)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Session/Cookie Secret
COOKIE_SECRET=your-cookie-secret-key-change-this

# Optional: Email Configuration (for booking confirmations)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASSWORD=your-app-password

# Optional: Payment Gateway Keys
# RAZORPAY_KEY_ID=your-razorpay-key
# RAZORPAY_KEY_SECRET=your-razorpay-secret
